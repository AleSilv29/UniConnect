<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page_background"
    tools:context=".common.ui.HomePageActivity">


    <Button
        android:id="@+id/buttonImpNews"
        android:layout_width="320dp"
        android:layout_height="78dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="#ac80df"
        android:drawableLeft="@drawable/baseline_notification_important_24"
        android:drawableRight="@drawable/baseline_notification_important_24"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="@string/imp_news"
        android:textSize="26sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonTimeTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonTimeTable"
        android:layout_width="176dp"
        android:layout_height="125dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="16dp"
        android:backgroundTint="#ac80df"
        android:drawableTop="@drawable/timetable_icon3"
        android:drawablePadding="5dp"
        android:fontFamily="@font/josefin_sans"
        android:text="@string/timetable"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="194dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonNews"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <Button
        android:id="@+id/buttonNews"
        android:layout_width="176dp"
        android:layout_height="125dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#ac80df"
        android:drawableTop="@drawable/news_icon2"
        android:drawablePadding="5dp"
        android:fontFamily="@font/josefin_sans"
        android:text="@string/news"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonTimeTable" />

    <Button
        android:id="@+id/buttonCatalog"
        android:layout_width="176dp"
        android:layout_height="125dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#ac80df"
        android:drawableTop="@drawable/classbook_icon"
        android:drawablePadding="5dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Classbook"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonTimeTable"
        app:layout_constraintTop_toBottomOf="@+id/buttonTimeTable"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSocialFeed"
        android:layout_width="176dp"
        android:layout_height="125dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#ac80df"
        android:drawableTop="@drawable/socialfeed_icon"
        android:drawablePadding="5dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Social Feed"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonCatalog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#7186DA"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_login_gradient"
            android:drawableTop="@drawable/baseline_logout_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/username_text"
        android:layout_width="229dp"
        android:layout_height="96dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="76dp"
        android:background="@drawable/circular_bg"
        android:backgroundTint="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/username_text"
        app:layout_constraintStart_toEndOf="@+id/username_text"
        app:layout_constraintTop_toTopOf="@+id/username_text" />


</androidx.constraintlayout.widget.ConstraintLayout>